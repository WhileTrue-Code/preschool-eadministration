FROM golang:latest as builder
WORKDIR /app
COPY ./apr_service/ .
COPY ./authorization/ /authorization/
COPY ./nats/ /nats/
RUN go mod download
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o main .

FROM alpine:latest
WORKDIR /root/
COPY --from=builder /app/main .
EXPOSE 8000
CMD ["./main"]